<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:TalkyTiles.Core.ViewModels;assembly=TalkyTiles.Core"
             x:Class="TalkyTiles.MobileApp.Views.TileButtonView"
             x:DataType="viewModels:SoundButtonViewModel"
             x:Name="Root"
             WidthRequest="100"
             HeightRequest="100">

    <Frame Padding="0"
           HasShadow="True"
           CornerRadius="20"
           BackgroundColor="LightCoral"
           WidthRequest="85"
           HeightRequest="85">

        <Grid RowSpacing="2" ColumnSpacing="2">

            <!-- 3 Columns / 3 Rows -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- EDIT button top-left -->
            <Button Grid.Row="0"
                    Grid.Column="0"
                    Text="⚙"
                    FontSize="16"
                    TextColor="White"
                    BackgroundColor="#444"
                    WidthRequest="30"
                    HeightRequest="30"
                    Padding="0"
                    CornerRadius="15"
                    Command="{Binding EditCommand}"
                    IsVisible="{Binding IsEditMode}"
                    Grid.ZIndex="10" />

            <!-- DELETE button top-right -->
            <Button Grid.Row="0"
                    Grid.Column="2"
                    Text="×"
                    FontSize="20"
                    TextColor="White"
                    BackgroundColor="Red"
                    WidthRequest="30"
                    HeightRequest="30"
                    Padding="0"
                    CornerRadius="15"
                    Command="{Binding RemoveCommand}"
                    CommandParameter="{Binding .}"
                    IsVisible="{Binding IsEditMode}"
                    Grid.ZIndex="10" />

            <!-- TITLE in middle row, spanning all columns -->
            <Label Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="3"
                   Text="{Binding DisplayText}"
                   FontSize="14"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   InputTransparent="True" />

            <!-- REC / STOP in bottom-center -->
            <Grid Grid.Row="2"
                  Grid.Column="1"
                  HorizontalOptions="Center"
                  VerticalOptions="Center">

                <!-- REC button -->
                <Button Grid.Row="0"
                        Text="🛑 REC"
                        FontSize="12"
                        BackgroundColor="Transparent"
                        Padding="0"

                        Command="{Binding RecordAudioCommand}"
                        IsVisible="{Binding CanRecord}" />

                <!-- STOP layout -->
                <StackLayout Grid.Row="0"
                             Orientation="Horizontal"
                             Spacing="6"
                             HorizontalOptions="Center"
                             IsVisible="{Binding IsRecording}">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Text="🟥"
                                FontSize="12"
                                BackgroundColor="Transparent"
                                Padding="0"
                                Command="{Binding StopRecordingCommand}"
                                HorizontalOptions="Start" />

                        <Label Grid.Column="0"
                               Text="{Binding SecondsRemaining}"
                               TextColor="White"
                               HorizontalOptions="Start"
                               VerticalOptions="Center"/>
                    </Grid>


                </StackLayout>
            </Grid>

        </Grid>
    </Frame>
</ContentView>


